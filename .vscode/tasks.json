{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Install dependencies",
            "command": "./scripts/install-deps.sh",
            "group": {
                "kind": "build"
            }
        },
        {
            "type": "shell",
            "label": "Configure",
            "command": "cmake -B build -G Ninja -DCMAKE_BUILD_TYPE=Debug",
            "group": {
                "kind": "build"
            }
        },
        {
            "type": "shell",
            "label": "Build",
            "command": "cmake --build build",
            "group": {
                "kind": "build"
            }
        },
        {
            "type": "shell",
            "label": "Install",
            "command": "sudo cmake --install build && ./scripts/code-sign.sh && killall Fcitx5",
            "group": {
                "kind": "build"
            }
        },
        {
            "type": "shell",
            "label": "Format",
            "command": "./scripts/format.sh",
            "group": {
                "kind": "build"
            }
        },
        {
            "type": "shell",
            "label": "Lint",
            "command": "./scripts/lint.sh",
            "group": {
                "kind": "build"
            }
        }
    ]
}
